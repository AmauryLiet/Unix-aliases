gpr() {
  git push
  TITLE="${"$(git rev-parse --abbrev-ref HEAD)"//-/ }"
  MESSAGE=$(echo $TITLE | cat - ./.github/PULL_REQUEST_TEMPLATE.md)
  hub pull-request -m "${MESSAGE}" --browse
}

